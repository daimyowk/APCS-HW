public class Shapes{
    public string tri1{
	int i,j;
	for(i=0;i<h;i++){
	    for(j=0;j<=i;j++){
		s=s+"*";
	    }
	    s=s+"\n";
	}
	return s;
    }
    public String tri2(int height){
	int h;
	int i;
	String s="";
	for (h=1;h<=height;j++){
	    //add next space line
	    for (i=0;i<height-h;i++){
		s=s+" ";
	    }
	    for (i=0;i<h;i++){
		s=s+"*";
	    }
	    s=s+"\n"
		}
    }
}
